<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bodyWhite"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="15.0dip"
    android:layout_marginStart="15.0dip"
    android:layout_marginEnd="15.0dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.tomer.fadingtextview.FadingTextView
            android:textSize="25.0sp"
            android:textStyle="bold"
            android:textColor="@color/darkText"
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/appTrans"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/warningCard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip">

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="@color/redStat"
            app:cardCornerRadius="16.0dip"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/bodyWhite"
                    android:id="@+id/warningTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Warning"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@color/bodyWhite"
                    android:id="@+id/warningTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@id/warningTitle"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ancCard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip">

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="16.0dip"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/bodyWhite"
                    android:id="@+id/ancTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Announcement"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@color/bodyWhite"
                    android:id="@+id/ancTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Loader. Support PUBGM v2.4.0"
                    android:layout_below="@id/ancTitle"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">

        <Button
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/bodyWhite"
            android:id="@+id/visitBtn"
            android:background="@drawable/button_back"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:text="SPARKSKILLZ"
            android:textAllCaps="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip">

        <Button
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/bodyWhite"
            android:id="@+id/refreshBtn"
            android:background="@drawable/button_back2"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:text="Refresh Loader"
            android:textAllCaps="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip">

        <TextView
            android:textSize="25.0sp"
            android:textStyle="bold"
            android:textColor="@color/darkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheats"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15.0dip"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:background="@color/darkgray"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="@color/bodyWhite"
                android:id="@+id/name"
                android:paddingTop="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUBGM [64-bit]"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7.0dip" />

            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="@color/bodyWhite"
                android:id="@+id/version"
                android:paddingTop="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Installed"
                android:layout_below="@id/name"
                android:layout_marginStart="7.0dip" />

            <TextView
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="@color/greenStat"
                android:id="@+id/status"
                android:paddingTop="32.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe"
                android:layout_below="@id/name"
                android:layout_marginStart="7.0dip" />

            <Button
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@color/bodyWhite"
                android:id="@+id/launchBtn"
                android:background="@drawable/button_back"
                android:layout_width="140.0dip"
                android:layout_height="37.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="Launch"
                android:textAllCaps="false"
                android:layout_marginEnd="7.0dip"
                android:layout_alignParentEnd="true" />

            <Button
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@color/bodyWhite"
                android:id="@+id/downBtn"
                android:background="@drawable/button_back"
                android:layout_width="140.0dip"
                android:layout_height="37.0dip"
                android:layout_marginBottom="5.0dip"
                android:text="Download"
                android:layout_below="@id/launchBtn"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:layout_marginEnd="7.0dip"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
