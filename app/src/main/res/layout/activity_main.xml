<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/sparkGrey"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/expiryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="10.0dip"
            android:maxLines="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20.0dip"
            android:paddingEnd="20.0dip">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/startBtn"
                android:background="@drawable/yellow_btn_back"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_marginTop="10.0dip"
                    android:src="@drawable/ic_play" />

                <TextView
                    android:textSize="25.0sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:lines="2"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <View
                android:background="@color/transparent"
                android:layout_width="20.0dip"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/stopBtn"
                android:background="@drawable/yellow_btn_back"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_marginTop="10.0dip"
                    android:src="@drawable/ic_stop" />

                <TextView
                    android:textSize="25.0sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="STOP"
                    android:lines="2"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/settingsBtn"
            android:background="@drawable/yellow_rounded_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="60.0dip"
            android:text="settings" />

        <Button
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/logoutBtn"
            android:background="@drawable/yellow_rounded_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="60.0dip"
            android:text="logout" />

        <Button
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/visitBtn"
            android:background="@drawable/yellow_rounded_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="60.0dip"
            android:text="sparkskillz" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:textSize="13.0sp"
            android:typeface="monospace"
            android:textColor="@color/sparkYellow"
            android:id="@+id/verText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true" />

    </LinearLayout>

</RelativeLayout>
